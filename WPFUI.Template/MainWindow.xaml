<Window
    x:Class="WPFUI.Template.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="WPF UI Template"
    Width="1200"
    Height="654"
    d:DesignHeight="650"
    d:DesignWidth="900"
    Style="{StaticResource UiWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  The title bar contains window navigation elements and some Tray related extras.  -->
        <wpfui:TitleBar
            Title="WPF UI Template (Window Title)"
            Icon="pack://application:,,,/Assets/wpfui.png"
            Grid.Row="0"
            ForceShutdown="False"
            MinimizeToTray="False"
            UseSnapLayout="True">
            <!--  You can put additional controls in the header, such as a search bar.  -->
            <!--  <wpfui:TitleBar.Header />  -->
        </wpfui:TitleBar>
    </Grid>
</Window>
